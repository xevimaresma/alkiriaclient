<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:baselineAligned="true" android:background="#d3d3d3">
    <ImageView
            android:layout_width="157dp"
            android:layout_height="115dp"
            android:id="@+id/imageView" android:layout_marginLeft="-1dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo"
            android:layout_marginTop="30px"
            android:adjustViewBounds="false" android:baselineAlignBottom="false"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="30px"
            android:layout_marginTop="70px"
            android:id="@+id/campoUser" android:layout_marginBottom="20px"
            android:background="@drawable/shape"
            android:hint="Username"
            android:textSize="15dp"/>


    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="30px"
            android:layout_marginTop="30px"
            android:id="@+id/campoPass" android:password="true" android:layout_marginBottom="20px"
            android:background="@drawable/shape"
            android:hint="Password"
            android:textSize="15dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="235dp" android:layout_gravity="center"
            android:layout_marginTop="140px" android:layout_marginBottom="-202dp">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Login"
                android:textSize="15dp"
                android:textColor="#686262"
                android:id="@+id/button" android:layout_gravity="left"
                android:layout_marginBottom="20dp" android:layout_marginTop="100dp"
                android:background="@drawable/shape"
                android:clickable="true"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Create an account"
                android:textSize="15dp"
                android:textColor="#686262"
                android:id="@+id/buttonCreate" android:layout_gravity="right"
                android:clickable="true"
                android:background="@drawable/shape"
                android:layout_marginLeft="15dp"/>

    </LinearLayout>

</LinearLayout>

