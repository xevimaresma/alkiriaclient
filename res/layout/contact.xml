<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:baselineAligned="true"
              android:layout_height="match_parent" android:background="#d3d3d3">
    <ImageView
            android:layout_width="157dp"
            android:layout_height="115dp"
            android:id="@+id/imageView" android:layout_marginLeft="-1dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo"
            android:layout_marginTop="30px"
            android:adjustViewBounds="false" android:baselineAlignBottom="false"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click!"
            android:id="@+id/button" android:layout_gravity="center" android:background="@drawable/shape"
            android:focusable="false" android:padding="10dp" android:textColor="#686262"/>
    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/selector" android:gravity="center" android:spinnerMode="dialog"
            android:layout_gravity="center_horizontal"/>

</LinearLayout>